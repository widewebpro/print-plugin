{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("wideweb\\printplugin\\assetbundles\\printplugin\\PrintPluginAsset") %}
{% do view.registerAssetBundle("wideweb\\printplugin\\assetbundles\\indexcpsection\\IndexCPSectionAsset") %}

{# Link for the ? icon at the bottom of the page #}
{% set docsUrl = "https://github.com/wideweb/print-plugin/blob/master/README.md" %}

{# The title of this CP section #}
{% set title = "Print Plugin" %}

{# The URL to this plugin's base CP section #}
{% set pluginCpUrl = url('print-plugin') %}

{# Get a URL to an image in our AssetBundle #}
{% set iconUrl = view.getAssetManager().getPublishedUrl('@wideweb/printplugin/assetbundles/indexcpsection/dist', true) ~ '/img/Index-icon.svg' %}

{# Content that should appear in the page header#}
{% set extraPageHeaderHtml %}
    <div class="buttons">
        <a href="{{ pluginCpUrl }}" class="btn submit add icon">{{ "Click Me!"|t('print-plugin') }}</a>
    </div>
{% endset %}
{% set selectedSubnavItem = 'static' %}
{#{% set tabs = {#}
{#content:            { label: "Content"|t, url: url('print-plugin/create-pdf') },#}
{#outputs:         { label: "Outputs"|t, url: url('print-plugin/outputs') },#}
{#} %}#}
{# The content of the CP Section#}
{#{% set selectedTab = 'content' %}#}
{% set content %}

    <h2>{{ "Create new File" }}</h2>
    <form action="/actions/print-plugin/static/create-static" method="POST" enctype="multipart/form-data">
        {{ csrfInput() }}
        <div class="fieldset">
            <label for="heigth">
                <h4>Title</h4>
            </label>
            <input type="text" name="title" placeholder="Title">
        </div>

        <div class="fieldset">
            <label for="userGroup">
                <h4>Select User Group</h4>
            </label>
            <div class="select">
                <select name="userGroup">
                    <option value="all">All</option>
                    {% for userGroup in craft.app.userGroups.allGroups()%}
                        <option value="{{ userGroup.handle }}">{{ userGroup.name }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        {% set categories= craft.printPluginCategories.getAllCategories('static') %}
        <div class="fieldset">
            <label for="category">
                <h4>Select Category</h4>
            </label>
            <div class="select">
                <select name="category" id="categoryChange">
                    {% for category in categories %}
                        <option value="{{ category.id }}" data-type-static="{{ category.staticType }}">{{ category.title }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>

        <div id="file">
        <div class="fieldset">
            <label class="submit-btn --grey">
                Upload File
                <input style="display: none;" type="file" name="file">
            </label>
        </div>
        <div class="fieldset">
            <label class="submit-btn --grey">
                Upload Preview Image
                <input style="display: none;" type="file" name="previewImage">
            </label>
        </div>
        </div>
        <div id="video" style="display:none">
        <div class="fieldset">
            <label for="videoTitle">
                <h4>YouTube Video Title</h4>
            </label>
            <input type="text" name="videoTitle" value="">
        </div>
        <div class="fieldset">
            <label for="videoIframe">
                <h4>YouTube Video</h4>
            </label>
            <textarea type="text" name="videoIframe" rows="5" value=""></textarea>
        </div>
        </div>

        {% set subFolders = craft.printPluginCategories.getSubFolders('images', 'clients') %}
        <div class="fieldset" data-type="craft\fields\Assets" id="folders" style="display:none">
            <label for="assetFolder">
                <h4>Select Asset Folder</h4>
            </label>
            <div class="select">
                <select name="assetFolder">
                    {% for folder in subFolders %}
                        <option value="{{ folder.id }}">{{ folder.name }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>


        <input class="submit-btn" type="submit" value="Create">
    </form>
    <script>
        document.getElementById('categoryChange').addEventListener('change', function () {
            if  (this.selectedOptions[0].getAttribute("data-type-static") == 'video'){
                document.getElementById('video').style.display = 'block';
                document.getElementById('file').style.display = 'none';
                document.getElementById('folders').style.display = 'none';
            }else if(this.selectedOptions[0].getAttribute("data-type-static") == 'file'){
                document.getElementById('file').style.display = 'block';
                document.getElementById('video').style.display = 'none';
                document.getElementById('folders').style.display = 'none';
            }else if (this.selectedOptions[0].getAttribute("data-type-static") == 'assetFolder'){
                document.getElementById('folders').style.display = 'block';
                document.getElementById('video').style.display = 'none';
                document.getElementById('file').style.display = 'none';
            }
        });
    </script>

    <style>
        .--grey {
            background-color: #8b96a2 !important;
            display: inline-flex;
            justify-content: center;
            align-items: center;
            color: #fff;
        }
        .fieldset label h4 {
            margin-bottom: 8px !important;
            padding-left: 4px;
            color: #3f4d5a;
        }
        .fieldset select {
            padding: 7px 22px 7px 10px;
            display: block;
            position: relative;
            border: none;
            font-size: 14px;
            line-height: 20px;
            color: #3f4d5a;
            background-color: rgba(96, 125, 159, 0.25);
            appearance: none;
            white-space: pre;
            border-radius: 5px;
            min-width: 356px;
        }
        .fieldset input {
            padding: 6px 9px;
            min-width: 356px;
            border-radius: 3px;
            border: 1px solid rgba(96, 125, 159, 0.25);
            background-color: #fbfcfe;
            box-shadow: inset 0 1px 4px -1px rgba(96, 125, 159, 0.25);
            background-clip: padding-box;
            font-size: 14px;
            line-height: 20px;
            color: #3f4d5a;
            min-height: 3px;
            box-sizing: border-box;
            appearance: none;
        }
        .fieldset textarea {
            padding: 6px 9px;
            min-width: 356px;
            border-radius: 3px;
            border: 1px solid rgba(96, 125, 159, 0.25);
            background-color: #fbfcfe;
            box-shadow: inset 0 1px 4px -1px rgba(96, 125, 159, 0.25);
            background-clip: padding-box;
            font-size: 14px;
            line-height: 20px;
            color: #3f4d5a;
            min-height: 3px;
            box-sizing: border-box;
            appearance: none;
        }
        .fieldset .select:after {
            display: block;
            content: '';
            width: 5px;
            height: 5px;
            border: solid #7b8793;
            border-width: 0 2px 2px 0;
            transform: rotate(45deg);
            position: absolute;
            z-index: 1;
            top: calc(50% - 5px);
            right: 9px;
            user-select: none;
            pointer-events: none;
        }
        .fieldset select option {
            line-height: 24px;
        }
        .fieldset select:focus,
        .fieldset input:focus {
            outline: none;
            border-color: rgba(96, 125, 159, 0.8);
        }
        .fieldset {
            margin-bottom: 12px;
        }
        .submit-btn {
            align-items: center;
            justify-content: center;
            border-radius: 5px;
            padding: 7px 14px;
            border: none;
            text-align: center;
            white-space: nowrap;
            user-select: none;
            cursor: pointer;
            box-sizing: border-box;
            appearance: none;
            outline: none;
            color: #fff;
            font-size: inherit;
            background-color: #e5422b;
        }
    </style>

{% endset %}
